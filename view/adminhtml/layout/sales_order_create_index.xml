<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="order_create_billing_form">
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">moneris</argument>
                <argument name="template" xsi:type="string">Tonder_Moneris::form/cc.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="order_create_billing_form">
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">moneris_cc_vault</argument>
                <argument name="template" xsi:type="string">Magento_Vault::form/vault.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="content">
            <block name="moneris_payment_script" as="moneris_payment_script" after="billing_method" template="Tonder_Moneris::payment/script.phtml" class="Tonder\Payment\Block\Payment"/>
        </referenceBlock>
    </body>
</page>
